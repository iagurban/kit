{
  "name": "signing-service",
  "root": "apps/signing-service",
  "sourceRoot": "apps/signing-service/src",
  "projectType": "application",
  "targets": {
    "clean-dist": {},
    "copy-assets": {},
    "build-service": {},
    "run-service": {},
    "serve-backend": {},
    "issue-service-cert": {},
    "generate-proto-code": {
      "options": {
        "protoFileName": "signing"
      }
    },

    "build": {
      "executor": "nx:noop",
      "outputs": [],
      "dependsOn": ["build-service"]
    },

    "serve": {
      "executor": "nx:noop",
      "dependsOn": ["serve-backend"]
    },

    "issue-ca-cert": {
      "executor": "@poslah/nx-poslah:run",
      "options": {
        "commands": [
          "openssl genrsa -out ca.key 2048",
          "openssl req -new -x509 -key ca.key -sha256 -days 365 -out ca.crt"
        ],
        "cwd": "{workspaceRoot}/certs"
      }
    },

    "issue-jwt-cert": {
      "executor": "@poslah/nx-poslah:run",
      "options": {
        "commands": [
          "openssl genrsa -out jwt-private.pem 2048",
          "openssl rsa -in jwt-private.pem -pubout -out jwt-public.pem"
        ],
        "cwd": "{workspaceRoot}/{projectRoot}/certs"
      }
    },

    "swc-build-ts-watch": {}
  },
  "tags": []
}
