{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false, // Set to true if you're using React/TSX
      "decorators": true // Enable if you use decorators
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "esnext", // Target modern JavaScript version
  },
  "module": {
    "type": "es6", // Or "es6" depending on your needs
    "resolveFully": true,
    "outFileExtension": ".js"
  },
  "sourceMaps": true // Generate source maps for easier debugging
}
