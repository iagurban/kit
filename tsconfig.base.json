{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable"
    ],
    "module": "CommonJS",
    "strict": true,
    "declaration": true,
    "incremental": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDirs": [
      "apps",
      "libs"
    ],
    "paths": {
      "nx-poslah": ["libs/nx-poslah/src/index.ts"],
      "@gurban/kit/*": ["libs/kit/src/*"],
      "@poslah/util/*": ["libs/util/src/*"],
      "@poslah/chats-service/*": ["apps/chats-service/src/*"],
      "@poslah/messages-service/*": ["apps/messages-service/src/*"]
    }
  },
  "include": [
    "apps",
    "libs"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
