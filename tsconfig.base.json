{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "incremental": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@gurban/kit/*": ["libs/kit/src/*"],
      "@poslah/auth-service/*": ["apps/auth-service/src/*"],
      "@poslah/chats-service/*": ["apps/chats-service/src/*"],
      "@poslah/database/*": ["libs/database/src/*"],
      "@poslah/messages-service/*": ["apps/messages-service/src/*"],
      "@poslah/signing-service/*": ["apps/signing-service/src/*"],
      "@poslah/util/*": ["libs/util/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "tmp"]
}
