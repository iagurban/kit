{
  "compilerOptions": {
    "target": "ES2021",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,

    "types": ["node"],
    "baseUrl": ".",
    "rootDir": "../..",
    "paths": {
      "@gurban/kit/*": ["../kit/src/*"]
    }
  },
  "include": ["./src"]
}
