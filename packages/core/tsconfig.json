{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,

    "types": ["node"]
  },
  "include": ["./src"]
}
