{
  "files": [],
  "references": [
    { "path": "./packages/kit" }
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "sourceMap": true,
    "rootDir": ".",
//    "outDir": "dist",
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,

    "noEmit": true
  },
  "include": ["packages/**/*"]
}
